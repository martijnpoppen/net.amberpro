  "flow": {
    "triggers": [
      {
        "id": "trigger_router_connected",
        "title": {
          "en": "A device connected to the Router",
          "nl": "Een apparaat kreeg connectie met de router"
        },
        "titleFormatted": {
          "en": "[[ip]] [[device]] (A device) connected to the Router",
          "nl": "[[ip]] [[device]] (Een apparaat) kreeg connectie met de router"
        },
        "tokens": [
          {
            "name": "ip",
            "type": "string",
            "title": {
              "en": "IP",
              "nl": "IP"
            },
            "example": "192.168.178.57"
          }
        ],
        "args": [
          {
            "name": "ip",
            "type": "text",
            "title": {
              "en": "IP (optional)",
              "nl": "IP (optioneel)"
            },
            "required": false
          },
          {
            "name": "device",
            "type": "device",
            "filter": "capabilities=measure_wan_type"
          }
        ]
      },
      {
        "id": "trigger_router_disconnected",
        "title": {
          "en": "A device disconnected from the Router",
          "nl": "Een apparaat verloor connectie met de router"
        },
        "titleFormatted": {
          "en": "[[ip]] [[device]] (A device) disconnected from the Router",
          "nl": "[[ip]] [[device]] (Een apparaat) verloor connectie met de router"
        },
        "tokens": [
          {
            "name": "ip",
            "type": "string",
            "title": {
              "en": "IP",
              "nl": "IP"
            },
            "example": "192.168.178.57"
          }
        ],
        "args": [
          {
            "name": "ip",
            "type": "text",
            "title": {
              "en": "IP (optional)",
              "nl": "IP (optioneel)"
            },
            "required": false
          },
          {
            "name": "device",
            "type": "device",
            "filter": "capabilities=measure_wan_type"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "action_reboot_flow",
        "title": {
          "en": "Reboot",
          "nl": "Herstarten"
        },
        "titleFormatted": {
          "en": "[[device]] Reboot",
          "nl": "[[device]] Herstarten"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_reboot"
          }
        ]
      },
      {
        "id": "action_update_data_flow",
        "title": {
          "en": "Update data",
          "nl": "Data updaten"
        },
        "titleFormatted": {
          "en": "[[device]] Update data",
          "nl": "[[device]] Data updaten"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_update_data"
          }
        ]
      },
      {
        "id": "action_upload_file_flow",
        "title": {
          "en": "Upload File",
          "nl": "Bestand uploaden",
          "de": "Datei hochladen"
        },
        "titleFormatted": {
          "en": "[[device]] [[droptoken]] Upload File",
          "nl": "[[device]] [[droptoken]] Bestand uploaden"
        },
        "droptoken": [
          "image",
          "string"
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "capabilities=action_upload_file"
          }
        ]
      }
    ]
  },
  "capabilities": {
    "measure_uptime": {
      "type": "number",
      "title": {
        "en": "Up-Time",
        "nl": "Online tijd"
      },
      "units": {
        "en": "Hours",
        "nl": "Uur"
      },
      "insights": true,
      "desc": {
        "en": "Up-Time in hours",
        "nl": "Online tijd in uren"
      },
      "chartType": "spline",
      "decimals": 2,
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/stopwatch.svg",
      "$flow": {
        "triggers": [
          {
            "id": "measure_uptime_changed",
            "title": {
              "en": "The uptime has changed",
              "nl": "De online tijd is veranderd"
            },
            "tokens": [
              {
                "name": "measure_uptime",
                "title": {
                  "en": "Up-Time",
                  "nl": "Online tijd"
                },
                "type": "number",
                "example": 99
              }
            ]
          }
        ]
      }
    },
    "measure_uptime_days": {
      "type": "string",
      "title": {
        "en": "Up-Time",
        "nl": "Online tijd"
      },
      "units": {
        "en": "Hours",
        "nl": "Uur"
      },
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "icon": "assets/icons/stopwatch.svg"
    },
